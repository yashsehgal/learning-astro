---
export interface Props {
  username: string;
  repositoryName: string;
  starCount: number;
  isForkable: boolean;
  forkCount: number;
  watchStatus: "Unwatched" | "Watching" | "Only-mentions";
  watchCount: number;
}

const {
  username,
  repositoryName,
  starCount = 0,
  isForkable = true,
  forkCount = 0,
  watchStatus = "Unwatched",
  watchCount = 0,
} = Astro.props;
---

<div
  class="RepositoryView-headerActions pt-4 pr-4 pl-4 d-flex flex-row flex-items-center flex-justify-between"
>
  <div class="RepositoryView-name d-flex flex-row flex-items-center">
    <span class="h3">
      <a href="#">{username}</a><span class="color-fg-subtle text-light m-1"
        >/</span
      ><a href="#">{repositoryName}</a>
    </span>
    <span class="Label ml-2">public</span>
  </div>
  <div
    class="RepositoryView-ations d-flex flex-row flex-items-center flex-justify-end"
  >
    <div class="clearfix action-watch">
      <a class="btn btn-sm btn-with-count" href="#" role="button">
        <!-- <%= octicon "eye" %> -->
        <svg
          class="octicon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          width="16"
          height="16"
          ><path
            fill-rule="evenodd"
            d="M1.679 7.932c.412-.621 1.242-1.75 2.366-2.717C5.175 4.242 6.527 3.5 8 3.5c1.473 0 2.824.742 3.955 1.715 1.124.967 1.954 2.096 2.366 2.717a.119.119 0 010 .136c-.412.621-1.242 1.75-2.366 2.717C10.825 11.758 9.473 12.5 8 12.5c-1.473 0-2.824-.742-3.955-1.715C2.92 9.818 2.09 8.69 1.679 8.068a.119.119 0 010-.136zM8 2c-1.981 0-3.67.992-4.933 2.078C1.797 5.169.88 6.423.43 7.1a1.619 1.619 0 000 1.798c.45.678 1.367 1.932 2.637 3.024C4.329 13.008 6.019 14 8 14c1.981 0 3.67-.992 4.933-2.078 1.27-1.091 2.187-2.345 2.637-3.023a1.619 1.619 0 000-1.798c-.45-.678-1.367-1.932-2.637-3.023C11.671 2.992 9.981 2 8 2zm0 8a2 2 0 100-4 2 2 0 000 4z"
          ></path></svg
        >
        <span>Watch</span>
      </a>
      <a class="social-count" href="#">{watchCount}</a>
    </div>
    <div class="BtnGroup d-block ml-2">
      <button class="BtnGroup-item btn btn-sm" type="button">
        <span class="d-flex flex-items-center">
            <svg class="mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path d="M9.5 3.25a2.25 2.25 0 1 1 3 2.122V6A2.5 2.5 0 0 1 10 8.5H6a1 1 0 0 0-1 1v1.128a2.251 2.251 0 1 1-1.5 0V5.372a2.25 2.25 0 1 1 1.5 0v1.836A2.493 2.493 0 0 1 6 7h4a1 1 0 0 0 1-1v-.628A2.25 2.25 0 0 1 9.5 3.25Zm-6 0a.75.75 0 1 0 1.5 0 .75.75 0 0 0-1.5 0Zm8.25-.75a.75.75 0 1 0 0 1.5.75.75 0 0 0 0-1.5ZM4.25 12a.75.75 0 1 0 0 1.5.75.75 0 0 0 0-1.5Z"></path></svg>
            Fork
            <span class="Counter ml-1">{forkCount}</span>
        </span>
      </button>
      <button class="BtnGroup-item btn btn-sm" type="button">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          width="16"
          height="16"
          ><path
            d="m4.427 7.427 3.396 3.396a.25.25 0 0 0 .354 0l3.396-3.396A.25.25 0 0 0 11.396 7H4.604a.25.25 0 0 0-.177.427Z"
          ></path></svg
        >
      </button>
    </div>
    <div class="BtnGroup d-block ml-2">
        <button class="BtnGroup-item btn btn-sm" type="button">
          <span class="d-flex flex-items-center">
            <svg class="mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16"><path d="M8 .25a.75.75 0 0 1 .673.418l1.882 3.815 4.21.612a.75.75 0 0 1 .416 1.279l-3.046 2.97.719 4.192a.751.751 0 0 1-1.088.791L8 12.347l-3.766 1.98a.75.75 0 0 1-1.088-.79l.72-4.194L.818 6.374a.75.75 0 0 1 .416-1.28l4.21-.611L7.327.668A.75.75 0 0 1 8 .25Zm0 2.445L6.615 5.5a.75.75 0 0 1-.564.41l-3.097.45 2.24 2.184a.75.75 0 0 1 .216.664l-.528 3.084 2.769-1.456a.75.75 0 0 1 .698 0l2.77 1.456-.53-3.084a.75.75 0 0 1 .216-.664l2.24-2.183-3.096-.45a.75.75 0 0 1-.564-.41L8 2.694Z"></path></svg>
              Star
              <span class="Counter ml-1">{starCount}</span>
          </span>
        </button>
        <button class="BtnGroup-item btn btn-sm" type="button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            width="16"
            height="16"
            ><path
              d="m4.427 7.427 3.396 3.396a.25.25 0 0 0 .354 0l3.396-3.396A.25.25 0 0 0 11.396 7H4.604a.25.25 0 0 0-.177.427Z"
            ></path></svg
          >
        </button>
      </div>
  </div>
</div>
